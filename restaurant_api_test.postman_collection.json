						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"pm.test(\"Has restaurants array\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.restaurants).to.be.an(\"array\");",
