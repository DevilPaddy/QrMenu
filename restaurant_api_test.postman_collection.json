				{
					"name": "Disable Restaurant",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"pm.test(\"Status is DISABLED\", function () {",
									"    var jsonData = pm.response.json();",
									"    // Depending on your API return structure:",
									"    if(jsonData.restaurant) {",
									"        pm.expect(jsonData.restaurant.status).to.eql(\"DISABLED\");",
									"    }",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
